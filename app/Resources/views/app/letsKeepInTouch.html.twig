{% set navbarClass='navbar-shrink' %}
{% set useFullUrl=true %}

{% extends 'app/layout.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <style>
        nav {
            display: block;
        }
        #contact{
            margin-top:140px;

        }
        #returnHomepage{
            padding-top:80px;
        }
    </style>

{% endblock %}
{% block body_wrapper %}
<body id="top" class="scrollspy">{% endblock %}

{% block main %}
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">{{ 'contact.thanks'|trans }} <i class="fa fa-heart-o"></i></h2>

                    <h2 class="section-heading">{{ 'contact.we_ll_keep_in_touch'|trans }}</h2>
                </div>
                <div class="col-md-4 col-md-offset-4" id="returnHomepage"><a href="{{ url('homepage') }}" class="btn btn-block btn-default">{{ 'contact.return_to_homepage'|trans }}</a></div>
            </div>
        </div>
    </section>
{% endblock %}
