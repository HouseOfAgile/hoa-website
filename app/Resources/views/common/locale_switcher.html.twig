<ul class="nav navbar-nav">
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" title="{{ attribute(locales, current_locale).locale_current_language }}">
            {{ attribute(locales, current_locale).locale_current_language }}
            <span class="caret"></span>
        </a>
        <ul class="dropdown-menu locale_chooser" role="menu" aria-labelledby="locale_chooser">
            {% for locale in locales if current_locale != locale.locale %}
            <li>
                {% set link = locale.link %}
                {% if app.request.attributes.get('_route_params')._locale is not defined %}
                    {% set link = path('lunetics_locale_switcher', {_locale: locale.locale }) %}
                {% endif %}
                <a href="{{ link }}" title="{{ locale.locale_current_language }}">
                    {{ locale.locale_current_language }}
                </a>
            </li>
            {% endfor %}
        </ul>
    </li>
</ul>
